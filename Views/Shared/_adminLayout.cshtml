<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Reimbursement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Webapplication.styles.css" asp-append-version="true" />
    <style>
    </style>
</head>

<body>

    <style>
        .dropdown {
            position: relative;
            
            
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 130px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            padding: 12px 16px;
            z-index: 1;
        }
        .name
        {
            position: absolute;
            left: 4rem;
            text-decoration: none;
            color: #fff ;
        }
        .report
        {
            position: absolute;
            left: 17rem;
            text-decoration: none;
            color: #FFF;
        }
         .report2
        {
            position: absolute;
            left: 22rem;
            text-decoration: none;
            color: #FFF;
        }
          .report3
        {
            position: absolute;
            left: 27rem;
            text-decoration: none;
            color: #FFF;
        }
        .report1
        {
            position: absolute;
            left: 13rem;
            text-decoration: none;
            color: #FFF;
        }


        .dropdown:hover .dropdown-content {
            display: block;
           
        }

        .dropdown a {
            text-decoration: none;
            color: black;
        }
        .contains
        {
            position: relative;
            right: 7rem;
        }
        .dropdown-toggle{
            text-decoration: none;
            background-color: black;
            color:white;
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background: rgb(8,8,8);
background: linear-gradient(90deg, rgba(8,8,8,1) 100%, rgba(36,111,207,1) 100%);">
            <div class="container-fluid">
                <img src="../images/logo2.png" alt="logo" style="width: 45px; height: 45px; border-radius: 5px;">
                <a class="name" asp-area="" asp-controller="Home" asp-action="Index">Reimbursement</a>
                            <a class="report1" asp-area="" asp-controller="Admin"
                                asp-action="Home">Home</a>
                                 <a class="report" asp-area="" asp-controller="Admin"
                                asp-action="Reports">Reports</a>
                                <a class="report2"  asp-area="" asp-controller="Admin"
                                asp-action="Records">Records</a>
                                 <a class="report3"  asp-area="" asp-controller="Admin"
                                asp-action="GetRemarks">Remarks</a>
               
                <div class="contains">

                
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                        <div class="dropdown" style="margin-left: 86%;color:#fff;">
                             <button class=" dropdown-toggle" type="button" data-toggle="dropdown">@ViewBag.Message
                             <span class="caret"></span></button>
                            <div class="dropdown-content">
                                <a asp-controller="Admin" asp-action="AdminProfile">My Profile</a>
                                <br>
                                <a asp-controller="Login" asp-action="LoginPage">Logout</a>
                            </div>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)
        </main>
    </div>



</body>

</html>
