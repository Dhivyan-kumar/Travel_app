                        <li class="nav-item">
                            <a class="nav-link text-dark" title="update" asp-area="" asp-controller="Home" asp-action="Update">Update</a>
                        </li> *@
                        <li class="nav-item" style="margin-left:78%">
                            <a class="btn btn-primary btn-sg" title="Login" asp-area="" asp-controller="Login" asp-action="LoginPage">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
