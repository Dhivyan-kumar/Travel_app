@model ForgotPassword
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  @section Scripts
  {
    @{
      <partial name="_ValidationScriptsPartial"/>
    }
  }
  <section class="vh-100" style="background-color: #008CBA;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="../images/images.jfif"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;margin-top:140px;margin-le:80px;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form method="post">

                  @* <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                  </div> *@
                  <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Change your password here</h3>
                  <p style="color:red; text-align;center;">@ViewBag.Message</p>
                  <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Emailaddress" for="form2Example17">Email address</label>
                    <input type="email" asp-for="Emailaddress" id="form2Example17" class="form-control form-control-lg" required/>
                     <span asp-validation-for="Emailaddress" class="text-danger"></span>
                  </div>
                    <div class="form-outline mb-4">
                    <label class="form-label" asp-for="EmployeeID" for="form2Example17">Employee ID</label>
                    <input type="text" asp-for="EmployeeID" id="form2Example17" class="form-control form-control-lg" required/>
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                  </div>  
                  <div class="form-outline mb-4">
                    <label class="form-label" asp-for="Password" for="form2Example27">Password</label>
                    <input type="password" asp-for="Password" id="form2Example27" class="form-control form-control-lg" required/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                  <div class="form-outline mb-4">
                    <label class="form-label" asp-for="ConfirmPassword" for="form2Example27">Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" id="form2Example27" class="form-control form-control-lg" required/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                  </div>

                  <div class="pt-1 mb-4">
                    <button type="submit" class="btn btn-dark btn-lg btn-block">Submit</button>
                  </div>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>
</html>
